#### Gruvbox Material Dark ####
###############################
set $bg       #282828
set $fg       #d4be98
set $red      #fb4934
set $green    #b8bb26
set $blue     #076678
set $purple   #d3869b
set $aqua     #8ec07c
set $darkgray #282828
set $yellow   #fabd2a
set $pink     #d3869b


#############
#### BAR ####
#############
bar {
	status_command i3status

    colors {
            # bar background color
            background $bg
            # text color used for blocks that do not have a color specified.
            statusline $fg

            # workspaces section
            #                    border     backgr.     text

            focused_workspace    $aqua      $aqua       $bg
            inactive_workspace   $bg        $pink       $bg
            active_workspace     $bg        $blue       $bg
            urgent_workspace     $red       $red        $fg

        }
	
position top
}

#######################
#### i3 appearance ####
#######################
#       Gruvbox Theme   brdr        bg          text    indictr     chld_brdr
client.focused          $aqua       $aqua       $bg     #D8DEE9     $aqua
client.focused_inactive $pink       $pink       $bg     $pink       $pink
client.unfocused        $pink       $pink       $bg     $bg         $pink
client.urgent           $red        $red        $bg     $red        $red
client.placeholder      $bg         $bg         $bg     $bg         $bg
client.background       $bg



